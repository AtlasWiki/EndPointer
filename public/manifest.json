{
  "manifest_version": 3,
  "name": "EndPointer",
  "version": "0.1.0",
  "description": "An endpoint parser and extractor with many flexible features",
  "icons": {
    "16": "icons/endPointer_logo_16x16.png",
    "48": "icons/endPointer_logo_48x48.png",
    "128": "icons/endPointer_logo_128x128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "PopUp/popup.html",
    "default_title": "Endpoint Extractor for Hackers"
  },
  "background": {
    "scripts": "background.js",
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "devtools_page": "DevTool/DevTool.html",
  "web_accessible_resources": [
    {
      "resources": ["DevTool/background.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}