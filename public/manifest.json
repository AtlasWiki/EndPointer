{
  "manifest_version": 3,
  "name": "JS-Toolkit",
  "version": "1.0.0",
  "description": "A JS-Parsing Toolkit with many flexible features",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "src/background/index.js"
  },
  "action": {
    "default_popup": "src/PopUp/index.html",
    "default_title": "JS Toolkit for Hackers"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.js"]
    }
  ]
}