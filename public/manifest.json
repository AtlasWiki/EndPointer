{
  "manifest_version": 3,
  "name": "JS-Toolkit",
  "version": "1.0.0",
  "description": "A JS-Parsing Toolkit with many flexible features",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "PopUp/popup.html",
    "default_title": "JS Toolkit for Hackers"
  },
  "background": {
    "service_worker": "PopUp/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["DevTool/content.js"]
    }
  ],
  "devtools_page": "DevTool/DevTool.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}